<h1> Restaurant Details </h1>

<h2><strong><%= @restaurant.name %></strong></h2>
<p><strong>Address:</strong> <%= @restaurant.address %><strong>|Phone:</strong> <%=@restaurant.phone_number%>| <strong>Category:</strong> <%= @restaurant.category.capitalize%></p>


<div class="list-group">
 <div class= "row justify-content-around">
    <div class="col-6">
      <ul>
          <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.content %> <%= '*' * review.rating %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<h4>Leave a review</h4>
<div class="container">
  <div class= "row justify-content-around">
    <div class="col-6">
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %> |


