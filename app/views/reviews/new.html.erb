<h1> Add a new review</h1>
<div class="container">
  <div class= "row justify-content-around">
    <div class="col-6">
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
